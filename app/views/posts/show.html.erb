<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<ul>
  <% @post.comments.each do |c| %>
    <li><%= c.body %></li>
  <% end%>
</ul>

<p>
  <%= render 'comment_form', post: @post %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
