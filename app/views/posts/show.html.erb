
<p>
  <strong>Title:</strong>
  <h1>
    <%= @post.title %>
  </h1>
</p>
<p>
  <%= image_tag @post.image.url %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<hr/>
<strong>Post Comments:</strong>
<ul>
  <% @post.comments.each do |c| %>
    <li><%= c.body %></li>
  <% end%>
</ul>

<p>
  <%= render 'comment_form', post: @post %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
